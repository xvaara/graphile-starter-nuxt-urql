{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "npm-run-all --print-label --parallel app:dev worker:dev db:dev graphql:dev",
    "app:build": "nuxt build",
    "app:dev": "nuxt dev",
    "app:generate": "nuxt generate",
    "app:preview": "nuxt preview",
    "graphql": "graphql-codegen -e",
    "graphql:dev": "graphql-codegen --watch",
    "gm": "bun ./node_modules/.bin/graphile-migrate",
    "db:migrate": "bun gm migrate",
    "db:dev": "bun gm watch",
    "db:commit": "bun gm commit",
    "db:uncommit": "bun gm uncommit",
    "db:reset": "bun gm reset",
    "db:dump": "bun gm migrate && bun gm reset --shadow --erase && bun gm migrate --shadow --forceActions",
    "db:test": "cross-env NODE_ENV=test NODE_OPTIONS=\"${NODE_OPTIONS:-} -r dotenv/config\" jest",
    "setup:env": "bun ./scripts/setup_env.js",
    "setup:db": "bun ./scripts/setup_db.js",
    "setup": "npm run setup:env auto && npm run setup:db && npm run graphql",
    "_i18n": "bunx nuxt-i18n-micro-cli",
    "i18n": "i18n-micro",
    "lint": "eslint --fix .",
    "worker:dev": "bun --watch --no-clear-screen worker/index.ts",
    "worker:start": "bun worker/index.ts",
    "postinstall": "nuxt prepare && graphql-codegen -e"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@grafserv/persisted": "^0.0.0-beta.34",
    "@graphile-contrib/pg-many-to-many": "^2.0.0-beta.7",
    "@graphile-contrib/pg-omit-archived": "^4.0.0-beta.4",
    "@graphile/pg-aggregates": "^0.2.0-beta.8",
    "@graphile/simplify-inflection": "^8.0.0-beta.6",
    "@nuxt/eslint": "1.4.1",
    "@nuxt/icon": "1.13.0",
    "@nuxt/image": "1.10.0",
    "@nuxt/test-utils": "3.19.1",
    "@nuxt/ui": "3.1.3",
    "@types/html-to-text": "^9.0.4",
    "@types/mjml": "^4.7.4",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.2",
    "@vue/apollo-composable": "^4.2.2",
    "@vue/apollo-util": "^4.2.2",
    "graphile": "^5.0.0-beta.40",
    "html-to-text": "^9.0.5",
    "lodash-es": "^4.17.21",
    "lru-cache": "^11.1.0",
    "mjml": "^4.15.3",
    "nodemailer": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "nuxt": "^3.17.4",
    "nuxt-auth-utils": "^0.5.20",
    "nuxt-i18n-micro": "^1.87.0",
    "nuxt-security": "2.2.0",
    "postgraphile": "^5.0.0-beta.40",
    "postgraphile-plugin-connection-filter": "^3.0.0-beta.8",
    "typescript": "^5.8.3",
    "vue": "^3.5.15",
    "vue-router": "^4.5.1",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-vue-apollo": "^4.1.2",
    "@iconify-json/heroicons": "^1.2.2",
    "@josephanson/nuxt-ai": "^0.1.6",
    "@nuxt/kit": "^3.17.4",
    "@types/lodash-es": "^4.17.12",
    "concurrently": "^9.1.2",
    "eslint": "^9.27.0",
    "graphile-migrate": "^1.4.1",
    "graphile-worker": "^0.16.6",
    "nuxt-i18n-micro-cli": "^1.1.1",
    "tsx": "^4.19.4"
  },
  "resolutions": {
    "graphql": "16.1.0-experimental-stream-defer.6"
  }
}
